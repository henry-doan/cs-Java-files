package assignment02;

import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;

public class Hailstone {

	public static void main(String[] args) {
		messageprompt();

	}
	
	public static void messageprompt() {
		System.out.println("Hello, welcome to hailstone, lets begin but having you input a positve number: ");
		Scanner s = new Scanner(System.in);
		int N = s.nextInt();
		int copyOfN = N;
		List<Integer> x = new ArrayList<Integer>();
		
		int count = 0;
		System.out.println(N);
		
		while (N < 0) {
		    System.out.println("I'm sorry, please print a positive number: ");
		    N = s.nextInt();
		}
		
		while (N != 1) {
			 if ( N % 2 == 0) {
				N = N / 2;
				count++;
				x.add(N);
			} else {
				N = ((N * 3) + 1);
				count++;
				x.add(N);
			}
		}
		
		System.out.println(x);
		
		System.out.println(copyOfN +" takes " + count + " times to interate in the series to converges to 1");
	}

}
