package assignment02;

public class Limit {

	public static void main(String[] args) {
		int N= 1;
        int nextNum = N;
        while (true) {
        		
        		// assigning the starting number to be the next integer
        		N = nextNum; 
        		
        		// as long as it is positive do the hailstone
            while (N != 1) { 
//                if (startingNumber % 2 == 1) { 
//                	startingNumber = startingNumber * 3 + 1;
//                }
//                
//                startingNumber = startingNumber / 2;
                if ( N % 2 == 0) {
    				// do the calculation
    					N = N / 2;

	    				// else it is odd
	    			} else {
	    				// do the calculation
	    				N = ((N * 3) + 1);
	    				
	    			}
                
                if (N < 0) {
                    System.out.println("The smallest number that doesn't have its Hailstone series is: " + nextNum);
                    System.exit(0); 
                }
            }
            nextNum++; //increase next number for Hailstone computation.
        }

	}

}
