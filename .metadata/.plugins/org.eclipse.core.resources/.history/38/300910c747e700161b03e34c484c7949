package lab04;

import java.io.File;

import javax.swing.JFileChooser;

public class VerifyFileStructure {

	public static void main(String[] args) {
		JFileChooser chooser = new JFileChooser("Macintosh\sHD:\\Users\\Henry\\Documents\\workspace\\CS1410\\src\\lab04");
		chooser.setDialogTitle("Which file would you like to verify?");
		chooser.showOpenDialog(null);
		
		int result;
		result = chooser.showOpenDialog(null);
		
		if (result == JFileChooser.CANCEL_OPTION) {
			return;
		}
		
		File inputFile;
		inputFile = chooser.getSelectedFile();
		System.out.println("You chose: " + inputFile);

	}

}
