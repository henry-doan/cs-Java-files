package a1;

import javax.swing.JOptionPane;
import java.util.*;

public class DrivingCostCalulator {
	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		System.out.print("-----------------------------------------\n" + "Welcome to the Driving Cost Calulator\n" + "-----------------------------------------\n");
		System.out.print("What is your driving distance in miles?");
		double drivingDistance = input.nextDouble();
		System.out.print("What is your vehicle's miles per gallon?");
		double vehicleMiles = input.nextDouble();
		System.out.println(drivingDistance + vehicleMiles);
	}
}
