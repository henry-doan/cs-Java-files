package assignment01;

import java.util.Scanner;

public class Hypotenuse {

	public static void main(String[] args) {
		welcome();
		calulation();
	}
	
	public static void welcome() {
		System.out.println("Hello! Welcome to the Hypotenuse,\nwhere this program will calulate the Hypotenuse with any given two sides!");
		System.out.println("----------------------------------------------------------------------------");
	}
	
	public static void calulation() {
		System.out.println("Enter the first side for the program to be calulated: ");
		int userFirstSide = new Scanner(System.in).nextInt();
		
		System.out.println("Enter the second side for the program to be calulated: ");
		int userSecondSide = new Scanner(System.in).nextInt();
		

		System.out.println(userFirstSide);
		System.out.println(userSecondSide);
	}
}
