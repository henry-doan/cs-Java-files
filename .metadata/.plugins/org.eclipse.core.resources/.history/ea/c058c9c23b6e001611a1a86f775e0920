package a1;

import javax.swing.JOptionPane;
 

public class DrivingCostCalulator {
	public static void main(String[] args) {
		JOptionPane.showMessageDialog(null, "-------------------------------\n" + "Welcome to the Driving Cost Calulator\n" + "-------------------------------");
		String drivingDistanceMsg = JOptionPane.showInputDialog("What is your driving distance in miles?");
		double drivingDistance;
		drivingDistance = Double.parseDouble(drivingDistanceMsg);
		JOptionPane.showMessageDialog(null,drivingDistance);
		String vehicleMilesMsg = JOptionPane.showInputDialog("What is your driving distance in miles?");
		double vehicleMiles;
		vehicleMiles = Double.parseDouble(vehicleMilesMsg);
		JOptionPane.showMessageDialog(null,vehicleMiles);
		String gasPriceMsg = JOptionPane.showInputDialog("What is your gas price in dollars?");
		double gasPrice ;
		gasPrice = Double.parseDouble(gasPriceMsg);
		JOptionPane.showMessageDialog(null,gasPriceMsg);
//		JOptionPane.showMessageDialog(null,drivingDistance + gasPriceMsg);
		double moneyTotal = drivingDistance * gasPrice / vehicleMiles;
		JOptionPane.showMessageDialog(null, moneyTotal);
	}
}
