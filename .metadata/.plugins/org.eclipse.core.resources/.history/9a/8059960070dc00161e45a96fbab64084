package assignment01;

import java.util.Scanner;

public class CircleArea {

	public static void main(String[] args) {
		welcome();
	}
	
	public static void welcome() {
		System.out.println("Enter in a radius for this program to calulate the area of the circle:");
		int radius = new Scanner(System.in).nextInt();
		int areaOfCircle = ((Math.PI * radius)^2);
		System.out.println("The number is: " + radius);
	}
	

}
